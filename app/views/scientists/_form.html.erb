<% if flash[:my_errors] %>
    <% flash[:my_errors].each do |error| %>
        <p style="color:red;"><%= error %></p>
    <% end %>
<% end %>

<%= form_for @scientist do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label "Field of Study" %>
    <%= f.text_field :field_of_study %>
    <br>
    <br>
    <%= f.submit %>
<% end %>